{
  "manifest_version": 2,
  "name": "webcat",
  "version": "1.0",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/light/16/webcat.png",
    "32": "icons/light/32/webcat.png",
    "48": "icons/light/48/webcat.png",
    "64": "icons/light/64/webcat.png",
    "96": "icons/light/96/webcat.png",
    "128": "icons/light/128/webcat.png",
    "256": "icons/light/256/webcat.png"
  },
  "web_accessible_resources": ["assets/1.root.json"],
  "background": {
    "scripts": ["dist/bundle.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["hooks/inject.js", "hooks/relay.js"],
      "run_at": "document_start"
    }
  ],
  "page_action": {
    "default_icon": {
      "16": "icons/light/16/webcat.png",
      "32": "icons/light/32/webcat.png"
    }
  }
}
