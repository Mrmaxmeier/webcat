{
  "manifest_version": 2,
  "name": "webcat",
  "version": "1.0",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/light/webcat.svg",
    "32": "icons/light/webcat.svg",
    "48": "icons/light/webcat.svg",
    "64": "icons/light/webcat.svg",
    "96": "icons/light/webcat.svg",
    "128": "icons/light/webcat.svg",
    "256": "icons/light/webcat.svg"
  },
  "web_accessible_resources": [
    "assets/1.root.json",
    "pages/error.html",
    "icons/light/webcat.svg",
    "icons/dark/webcat.svg"
  ],
  "background": {
    "scripts": ["dist/bundle.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["hooks/inject.js", "hooks/relay.js", "hooks/hook.js"],
      "run_at": "document_start"
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "icons/light/webcat.svg",
      "38": "icons/light/webcat.svg"
    }
  }
}
